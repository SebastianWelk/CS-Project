import random

# Define the different moods that the program will recognize.
moods = ["happy", "sad", "romantic", "excited", "scary"]

# Create a database of movies that the program can choose from.
database = [
    {"title": "The Notebook", "genre": "Romance", "summary": "A classic love story."},
    {"title": "The Shawshank Redemption", "genre": "Drama", "summary": "A story of hope."},
    {"title": "The Silence of the Lambs", "genre": "Horror", "summary": "A terrifying thriller."},
    {"title": "The Lion King", "genre": "Animation", "summary": "A family-friendly adventure."},
    {"title": "The Godfather", "genre": "Crime", "summary": "A timeless mafia story."},
    {"title": "Elf", "genre": "Comedy", "summary": "A Christmas movie."},
    {"title": "Titanic", "genre": "Drama", "summary": "A story of love and tragedy."},
    {"title": "Get Out", "genre": "Horror", "summary": "A psychological thriller."},
    {"title": "The Greatest Showman", "genre": "Musical", "summary": "A timeless mafia story."},
    {"title": "Crazy Rish Asians", "genre": "Drama", "summary": "A timeless mafia story."},
    {"title": "Highschool Musical", "genre": "Musical", "summary": "A timeless mafia story."},
    {"title": "The Great Gatsby", "genre": "Drama", "summary": "A timeless mafia story."},
    {"title": "The Dark Knight", "genre": "Action", "summary": "A timeless mafia story."},
    {"title": "The Matrix", "genre": "Action/Sci-Fi", "summary": "A timeless mafia story."},
    {"title": "Inception", "genre": "Action/Sci-Fi", "summary": "A timeless mafia story."},
    {"title": "Die Hard", "genre": "Action", "summary": "A timeless mafia story."},
    {"title": "The Shining", "genre": "Horror", "summary": "A timeless mafia story."},
    {"title": "The Conjuring", "genre": "Horror", "summary": "A timeless mafia story."},
    {"title": "Hereditary", "genre": "Horror", "summary": "A timeless mafia story."},
    {"title": "The Fault In Our Starts", "genre": "Drama", "summary": "A timeless mafia story."},
    {"title": "The Pursuit of Happiness", "genre": "Drama", "summary": "A timeless mafia story."},
 
]

# Map each movie in the database to one or more moods.
mapping = {
    "happy": ["The Lion King", "Elf", "The Greatest Showman", "Crazy Rish Asians", "Highschool Musical"],
    "sad": ["The Notebook", "The Shawshank Redemption", "The Fault In Our Starts", "The Pursuit of Happiness" ],
    "romantic": ["The Notebook", "Titanic", "Crazy Rish Asians", "The Great Gatsby"],
    "excited": ["The Lion King", "The Godfather", "The Dark Knight", "The Matrix", "Inception", "Die Hard"],
    "scary": ["The Silence of the Lambs", "Get Out", "The Shining", "The Conjuring", "Hereditary"]
}

# A function that returns movie suggestions based on the user's mood input.
def get_movie_suggestions(mood):
    # Search for movies that match the user's mood.
    suggestions = []
    for movie in database:
        if movie["title"] in mapping[mood]:
            suggestions.append(movie)
    
    # Return two random movie suggestions from the matching movies.
    return random.sample(suggestions, 2)

# The main program logic.
while True:
    # Ask the user for their mood input.
    mood = input("Enter your mood (happy, sad, romantic, excited, or scary): ")
    
    # Check if the user input is valid.
    if mood not in moods:
        print("Invalid mood input. Please try again.")
        continue
    
    # Get movie suggestions based on the user's mood input.
    movie_suggestions = get_movie_suggestions(mood)
    
    # Display the movie suggestions to the user.
    print("Here are some movie suggestions:")
    for i, movie in enumerate(movie_suggestions):
        print(f"{i+1}. {movie['title']} ({movie['genre']}) - {movie['summary']}")
    
   
